<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                tools:context="com.haedrian.haedrian.SendRequestActivity"
                android:background="@color/main_color"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout4">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffd4ffeb"
            android:layout_marginBottom="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="55"
                android:id="@+id/send_amount"
                android:textSize="40dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:id="@+id/dollarSignView2"
                android:textSize="30dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/send_amount"
                android:layout_toStartOf="@+id/send_amount" />
        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="send"
            android:id="@+id/send_button"

            android:background="@color/offset_color"
            android:layout_marginBottom="5dp"
            android:textSize="20sp"
            android:textStyle="normal"
            android:textColor="#ffffffff" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="cancel"
            android:id="@+id/cancel_button"

            android:background="@color/offset_color"
            android:textSize="20sp"
            android:textColor="#ffffffff" />
    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/selection_list"
        android:layout_centerHorizontal="true"
        android:background="#ffd4ffeb"
        android:layout_above="@+id/linearLayout4" />

</RelativeLayout>
