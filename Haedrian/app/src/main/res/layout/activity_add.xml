<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.haedrian.haedrian.AddActivity"
    android:background="@color/lightgrey">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Scan"
        android:id="@+id/scanButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/round_blue"
        android:layout_margin="2dp"
        android:textColor="@color/white"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:id="@+id/button15"
        android:layout_above="@+id/scanButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/round_purple"
        android:layout_margin="2dp"
        android:textColor="@color/white"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Social Media"
        android:id="@+id/button16"
        android:layout_above="@+id/button15"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/round_yellow"
        android:layout_margin="2dp"
        android:textColor="@color/white"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout3">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company"
            android:id="@+id/button17"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/round_blue"
            android:layout_margin="2dp"
            android:textColor="@color/white"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal"
            android:id="@+id/button18"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/round_blue"
            android:layout_margin="2dp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add people to your network"
        android:id="@+id/textView3"
        android:textColor="@color/blue"
        android:textStyle="italic"
        android:textSize="35sp"
        android:layout_marginTop="49dp"
        android:layout_alignParentTop="true"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Easy, Instant, Secure"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:textStyle="italic"
        android:textColor="@color/grey"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Which group?"
        android:id="@+id/textView5"
        android:layout_above="@+id/linearLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:textColor="@color/grey"
        android:textStyle="italic"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Where is their address?"
        android:id="@+id/textView7"
        android:layout_above="@+id/button16"
        android:layout_centerHorizontal="true"
        android:textStyle="italic"
        android:textColor="@color/grey"
        android:layout_marginBottom="5dp"
        android:textSize="15sp"/>
</RelativeLayout>
