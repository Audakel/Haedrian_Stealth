        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeScreen.HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name=".SendRequestActivity"
            android:label="@string/title_activity_send_request"
            android:parentActivityName=".HomeScreen.HomeActivity" >

            <!-- The meta-data element is needed for versions lower than 4.1 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeScreen.HomeActivity" />
        </activity>
        <activity
            android:name=".HomeScreen.AddActivity"
