<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.haedrian.haedrian" >

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--
 To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" /> <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" /> <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logobird_black"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="com.haedrian.haedrian.AppController">


        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SendRequestActivity"
            android:label="@string/title_activity_send_request"
            android:parentActivityName=".HomeActivity" >

            <!-- The meta-data element is needed for versions lower than 4.1 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.haedrian.haedrian.HomeActivity" />
        </activity>
        <activity
            android:name=".AddActivity"
            android:label="@string/title_activity_add"
            android:parentActivityName=".HomeActivity" >

            <!-- The meta-data element is needed for versions lower than 4.1 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.haedrian.haedrian.HomeActivity" />
 >
        </activity>
        <activity
            android:name=".ProjectsActivity"
            android:label="@string/title_activity_projects"
            android:parentActivityName=".HomeActivity"
            android:windowSoftInputMode="adjustPan" >

            <!-- The meta-data element is needed for versions lower than 4.1 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.haedrian.haedrian.HomeActivity" />
        </activity>
        <activity
            android:name=".InvestActivity"
            android:label="@string/title_activity_invest"
            android:parentActivityName=".HomeActivity" >

            <!-- The meta-data element is needed for versions lower than 4.1 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.haedrian.haedrian.HomeActivity" />
        </activity>
        <activity
            android:name=".CreateProjectActivity"
            android:label="@string/title_activity_create"
            android:parentActivityName=".HomeActivity" >

            <!-- The meta-data element is needed for versions lower than 4.1 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.haedrian.haedrian.HomeActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".WalletActivity"
            android:label="@string/title_activity_wallet"
            android:parentActivityName=".HomeActivity" >

            <!-- The meta-data element is needed for versions lower than 4.1 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.haedrian.haedrian.HomeActivity" />
        </activity>
        <activity
            android:name=".BuyActivity"
            android:label="@string/title_activity_buy"
            android:parentActivityName=".HomeActivity" >

            <!-- The meta-data element is needed for versions lower than 4.1 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.haedrian.haedrian.HomeActivity" />
        </activity>
        <activity
            android:name=".SendActivity"
            android:label="@string/title_activity_send"
            android:parentActivityName=".SendRequestActivity" >

            <!-- The meta-data element is needed for versions lower than 4.1 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.haedrian.haedrian.HomeActivity" />
        </activity>
        <activity
            android:name=".ProjectsList"
            android:label="@string/title_activity_projects_list"
            android:parentActivityName=".InvestActivity" >

            <!-- The meta-data element is needed for versions lower than 4.1 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.haedrian.haedrian.InvestActivity" />
        </activity>
        <activity
            android:name=".AddPersonalBankActivity"
            android:label="@string/title_activity_add_personal_bank" >
        </activity>

    </application>

</manifest>
